# App Settings
REACT_APP_NAME="Northern Capital Hotel"
REACT_APP_ENV=development
REACT_APP_VERSION=1.0.0
REACT_APP_SITE_URL=http://localhost:3000

# API Settings
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_API_TIMEOUT=10000

# Google Analytics
REACT_APP_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry (Error Tracking)
REACT_APP_SENTRY_DSN=

# Feature Flags
REACT_APP_FEATURE_BOOKING=true
REACT_APP_FEATURE_REVIEWS=true

# Map Settings
REACT_APP_GOOGLE_MAPS_API_KEY=

# Payment Gateway
REACT_APP_STRIPE_PUBLIC_KEY=
REACT_APP_PAYPAL_CLIENT_ID=

# Social Media
REACT_APP_FACEBOOK_URL=https://facebook.com/northerncapitalhotel
REACT_APP_INSTAGRAM_URL=https://instagram.com/northerncapitalhotel
REACT_APP_TWITTER_URL=https://twitter.com/northerncapitalhotel

# Contact Information
REACT_APP_CONTACT_EMAIL=info@northerncapitalhotel.com
REACT_APP_CONTACT_PHONE=+1234567890
REACT_APP_CONTACT_ADDRESS="123 Luxury Street, City, Country"

# Booking Settings
REACT_APP_MAX_GUESTS_PER_ROOM=4
REACT_APP_MAX_ROOMS_PER_BOOKING=5
REACT_APP_MIN_ADVANCE_BOOKING_DAYS=1
REACT_APP_MAX_ADVANCE_BOOKING_DAYS=365

# Image Optimization
REACT_APP_IMAGEKIT_URL=https://ik.imagekit.io/your-account/

# Performance Settings
REACT_APP_LAZY_LOAD_OFFSET=100
REACT_APP_DEBOUNCE_DELAY=300

# Authentication
REACT_APP_AUTH_TOKEN_KEY="nch_auth_token"
REACT_APP_REFRESH_TOKEN_KEY="nch_refresh_token"
REACT_APP_TOKEN_EXPIRY_KEY="nch_token_expiry"

# Cache Settings
REACT_APP_CACHE_PREFIX="nch_"
REACT_APP_CACHE_DEFAULT_TTL=3600

# Analytics
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ANALYTICS_DEBUG=false

# Logging
REACT_APP_LOG_LEVEL=debug
REACT_APP_ENABLE_CONSOLE_LOGS=true
REACT_APP_ENABLE_REMOTE_LOGGING=false
